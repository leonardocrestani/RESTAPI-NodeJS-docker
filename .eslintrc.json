{
    "parser": "babel-eslint",
    "env": {
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-unused-vars": ["error", { "args": "none" }],
        "no-unused-expressions": ["error", {"allowTaggedTemplates": true}]
    }
}
